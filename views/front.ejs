<!DOCTYPE html>
<html>

<head>
    

    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <style>
        .tinted-image {
            background-image: 
                linear-gradient(
                rgba(97, 7, 124, 0.322), 
                rgba(97, 7, 124, 0.322)
                ),
                url({{.IP}}{{.Background}});
        }

        .container-table {
            background:rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            margin-top: 20px;
        }
    </style>

</head>

<script>
    var row1 =<%-JSON.stringify(data)%>
    
</script>
<body class="tinted-image">
    <div class="container container-table">
        <table class="table table-hover">
            <thead>
                <th scope="col">IP</th>
                <th scope="col">Operating System</th>
                <th scope="col">Password PDF</th>
            </thead>
            <tbody id="table">
            </tbody>
        </table>
    </div>
    
    <script>
           
        console.log(row1)    
    

        const table = document.getElementById("table");

        var length =  0;

        function fetchData() {
            
                if (row1.length != length) {
                    resetTable();
                    row1.forEach(element => {
                        var row = table.insertRow(0)
                        var ip = row.insertCell(0);
                        var so = row.insertCell(1);
                        var pass = row.insertCell(2);
                        ip.innerHTML = element.ipv6addr;
                        so.innerHTML = element.so;
                        pass.innerHTML = element.pw;
                    });
                    length = row1.length
                }
               
        }

        function resetTable() {
            table.innerHTML = "";
        }

        fetchData()
        setInterval(() => {
            fetchData()
        }, 5000);
    </script>

</body>

</html>